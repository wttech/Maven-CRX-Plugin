			<organization>Cognifide</organization>
		</developer>
		<developer>
			<id>mateusz.chrominski</id>
			<name>Mateusz Chromiński</name>
			<email>mateusz.chrominski@cognifide.com</email>
			<organization>Cognifide</organization>
			<roles>
				<role>developer</role>
			</roles>
		</developer>
		<developer>
			<id>michal.chudy</id>
			<name>Michał Chudy</name>
			<email>michal.chudy@cognifide.com</email>
			<organization>Cognifide</organization>
			<roles>
